<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopProject.LoginPage">
    <StackLayout Margin="20" VerticalOptions="CenterAndExpand" Spacing="20" Orientation="Vertical">
        <Entry x:Name="UserEmail" Placeholder="Enter your email"></Entry>
        <Entry x:Name="UserPassword" Placeholder="Enter your password" IsPassword="True"></Entry>
        <Button x:Name="LoginBtn" Text="LogIn" TextColor="White" Clicked="LoginBtn_Clicked" BackgroundColor="Orange"></Button>

        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <Button x:Name="RegisterRedirect" Text="Register" FontSize="Small" Background="Transparent" Clicked="RegisterRedirect_Clicked"></Button>
            <Button x:Name="AdminRedirect" Text="Admin" FontSize="Small" Background="Transparent" Clicked="AdminRedirect_Clicked"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>