<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopProject.AdminLoginPage">
    <StackLayout Margin="20" VerticalOptions="CenterAndExpand" Spacing="20" Orientation="Vertical">
        <Entry x:Name="AdminEmail" Placeholder="Enter admin email"></Entry>
        <Entry x:Name="AdminPassword" Placeholder="Enter admin password" IsPassword="True"></Entry>
        <Button x:Name="AdminLoginBtn" Text="LogIn" TextColor="White" Clicked="AdminLoginBtn_Clicked" BackgroundColor="Orange"></Button>
    </StackLayout>
</ContentPage>